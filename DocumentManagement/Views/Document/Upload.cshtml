@model DocumentManagement.Models.Document

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input[type=text], select, textarea, password {
        width: 100%;
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    input[type=file] {
        width: 100%;
        padding: 4px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }
    #tags {
        float: left;
        border: 1px solid #ccc;
        padding: 5px;
        font-family: Arial;
    }

        #tags > span {
            cursor: pointer;
            display: block;
            float: left;
            color: #fff;
            background: #789;
            padding: 5px;
            padding-right: 25px;
            margin: 4px;
        }

            #tags > span:hover {
                opacity: 0.7;
            }

            #tags > span:after {
                position: absolute;
                content: "×";
                border: 1px solid;
                padding: 2px 5px;
                margin-left: 3px;
                font-size: 11px;
            }

        #tags > input {
            background: #eee;
            border: 0;
            margin: 4px;
            padding: 7px;
            width: auto;
        }
</style>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">

            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Document </li>
                    <li class="breadcrumb-item active">upload </li>

                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upload" method="post"
              enctype="multipart/form-data">
            @if (!string.IsNullOrEmpty(ViewBag.success))
            {
                <div class="alert alert-success" role="alert">
                    <strong>Success!</strong> @ViewBag.success.
                </div>}
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <div class="alert alert-warning" role="alert">
                    <strong>Failed!</strong> @ViewBag.error.
                </div>}

            <div class="row">
                <div class="col-md-6">
                    Choose a Document:<input type="file" name="file" required />
                </div>
            </div><br>

            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="DocumentTitle" class="text-danger"></span>
                    <input type="text" class="form-control" name="DocumentTitle" placeholder="Document Title" />
                </div>
            </div><br>

            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="DocumentDescription" class="text-danger"></span>
                    <textarea class="form-control" name="DocumentDescription" placeholder="Type there document description...">
</textarea>
                </div>
            </div><br>

            <div class="row">
                <div class="col-md-6">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    Select Category: <select name="CategoryId">


                        @foreach (var i in ViewBag.categories)
                        {

                            <option value="@i.CategoryId">@i.CategoryName</option>
                        }

                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    Publication Date:
                    <span asp-validation-for="DocumentPublication" class="text-danger"></span>
                    <input id="todayDate" type="date" class="form-control" name="DocumentPublication" readonly="readonly">
                </div>
            </div><br>
            <div class="row">
                <div class="col-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" value="true" name="Notify"> Notify employees
                        </label>
                    </div>
                </div>
            </div>
            <br>
            <div class="row col-md-6">
                <button type="submit" class="btn btn-info">Upload</button>

            </div>
        </form>
    </div>

    <script src="~/js/site.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</div>


